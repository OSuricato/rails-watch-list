
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?movie;">
  <div class="container">
    <h1>Create your own <strong>custom</strong> movie <strong>lists</strong>!</h1>
    <p>And never forget your favorite movies again</p>
    <%= link_to "My Lists", lists_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container d-flex justify-content-between align-items-center">
  <h2 class="text-center">My Lists</h2>
  <%= link_to 'Create a List', new_list_path, class: "btn btn-ghost" %>
</div>

<div class="cards px-3">
  <% @lists.each do |list| %>
    <div class="card-category py-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?<%= list.name %>)">
      <%= link_to list.name, list, class: 'show-list-link' %>
    </div>
  <% end %>
</div>
